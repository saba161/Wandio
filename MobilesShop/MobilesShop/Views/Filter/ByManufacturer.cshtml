@model IEnumerable<MobilesShop.Models.PhoneFeatures>

@foreach (var item in Model)
{
    <div class="col-sm-4 col-lg-4 col-md-4">
        <div class="thumbnail">
            <div class="caption">
                <h3>
                    <a asp-controller="Home" asp-action="Details" asp-route-id="@item.ID">@item.Name</a>
                </h3>
                <h3 class="pull-right">@item.Price.ToString("c")</h3>
            </div>
        </div>
    </div>
    <br />
}